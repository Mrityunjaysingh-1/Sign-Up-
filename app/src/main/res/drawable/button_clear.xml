<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#3A0303" />
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
            <gradient android:angle="20" android:endColor="#A5D5FB" android:startColor="#074D6E" />
            <corners android:radius="80dp" />
        </shape>
    </item>

    <item android:drawable="@color/black" android:state_enabled="true" android:state_pressed="true" />


</selector>